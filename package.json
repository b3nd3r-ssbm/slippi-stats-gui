{
  "name": "slippi-stats-gui",
  "version": "1.0.0",
  "main": "index.js",
  "author": "b3nd3r_ssbm",
  "description": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Slippi Stats GUI",
    "appId": "com.b3nd3rssbm.slippistatsgui",
    "files": [
      "index.html",
      "index.js",
      "package.json",
	  "getCombos.js",
	  "getStats.js",
	  "getGames.js",
	  "getTaunts.js",
	  "stats.js",
	  "utils.js",
      "Characters/",
      "Saga-Icons/",
      "Stage-Icons/",
	  "Stock-Icons/",
	  "icon.png",
      "Roboto-Light.woff",
      "Roboto-Light.woff2"
    ],
    "artifactName": "Slippi-Stats-GUI-${version}-${os}.${ext}",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "portable",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "dmg": {
      "icon": "./icon.png"
    },
    "nsis": {
      "unicode": "false"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/b3nd3r-ssbm/slippi-stats-gui.git"
  },
  "dependencies": {
    "@slippi/slippi-js": "^5.0.4",
    "ejs": "^3.1.3",
    "lodash": "^4.17.20",
    "shell": "^0.5.0"
  },
  "devDependencies": {
    "electron": "^9.1.1",
    "electron-builder": "^22.8.0"
  }
}
